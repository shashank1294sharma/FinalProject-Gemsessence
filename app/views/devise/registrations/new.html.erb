
  <h1 align="center" style=" padding-right: 285px;">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      </div>
    <%= devise_error_messages! %>
 <div class="container">
    <div class="row">
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2 ' %>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Email",  autofocus: true %>
        </div>
      </div>
    </div>

   <div class="row">
    <div class="form-group">
      <%= f.label :first_name, class: 'control-label col-sm-2 ' %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control", placeholder: "Name ",  autofocus: true %>
      </div>
    </div>
  </div>
   <div class="row">
    <div class="form-group">
      <%= f.label :last_name, class: 'control-label col-sm-2 ' %>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Surname", autofocus: true %>
      </div>
    </div>
  </div>

   <div class="row">
    <div class="form-group">
      <%= f.label :dob, class: 'control-label col-sm-2 ' %>
      <div class="col-sm-6">
        <%= f.text_field :dob,class: "form-control", placeholder: "Date Of Birth", autofocus: true %>
      </div>
    </div>
   </div>

  <div class="row">
   <div class="form-group">

    <%= f.label :password, class: 'control-label col-sm-2 ' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-sm-2 ' %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", autocomplete: "off" %>
      </div>
    </div>
  </div>

  <div class="row">
   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
  <% end %> 
</div>
<%= link_to "Edit", edit_user_registration_path %>


