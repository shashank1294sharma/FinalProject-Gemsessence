


<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description"><strong>Your Feeds</strong></h4>
    <hr>
    <%= simple_format(@feeds.post) %>
    <div class="article-actions">
    	<%= link_to "Edit this post", edit_feed_path(@feeds), class: "btn btn-xs btn-primary"%>
    	<%= link_to "Delete this post", feed_path(@feeds), method: :delete , 
    	                                    data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-xs btn-success"%>

		<%= link_to "Back to Feed Listing" , feeds_path, class: "btn btn-xs btn-success"%>
	</div>
</div>
